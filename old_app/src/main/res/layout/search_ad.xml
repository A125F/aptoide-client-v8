<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/backgroundCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        tools:src="@drawable/ad_icon"
        />
    <TextView
        android:id="@+id/app_name"
        style="@style/Aptoide.TextView.Medium.S.BlackAlpha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/star_icon"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/app_icon"
        app:layout_constraintTop_toTopOf="@+id/app_icon"
        tools:text="Clash Royale"
        />
    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="?attr/ratingDrawable"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ad_label"
        app:layout_constraintLeft_toLeftOf="@+id/app_name"
        app:layout_constraintStart_toStartOf="@+id/app_name"
        app:layout_constraintTop_toBottomOf="@+id/app_name"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintVertical_chainStyle="spread"
        />
    <TextView
        android:id="@+id/rating"
        style="@style/Aptoide.TextView.Medium.XXS.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/star_icon"
        app:layout_constraintLeft_toRightOf="@+id/star_icon"
        app:layout_constraintTop_toTopOf="@+id/star_icon"
        tools:text="4.2"
        />
    <ImageView
        android:id="@+id/downloads_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_download_icon"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/rating"
        app:layout_constraintStart_toEndOf="@id/rating"
        app:layout_constraintTop_toTopOf="@id/rating"
        />
    <TextView
        android:id="@+id/downloads"
        style="@style/Aptoide.TextView.Medium.XXS.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/downloads_icon"
        app:layout_constraintStart_toEndOf="@+id/downloads_icon"
        app:layout_constraintTop_toTopOf="@+id/downloads_icon"
        tools:text="123K"
        />

    <LinearLayout
        android:id="@+id/appc_earn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toTopOf="@+id/ad_label"
        >

      <ImageView
          android:id="@+id/coins_image"
          android:layout_width="17dp"
          android:layout_height="15dp"
          android:layout_marginEnd="5dp"
          android:layout_marginRight="5dp"
          android:scaleType="fitXY"
          android:visibility="invisible"
          app:srcCompat="@drawable/ic_get_appc"
          />

      <TextView
          android:id="@+id/reward_textview"
          style="@style/Aptoide.TextView.Medium.XXS"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="2"
          android:textColor="@color/curation_gold"
          android:visibility="invisible"
          tools:text="EARN â‚¬0.78"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/ad_label"
        style="@style/Aptoide.TextView.Medium.XS.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/all_title_ad"
        app:layout_constraintBottom_toBottomOf="@+id/app_icon"
        app:layout_constraintStart_toStartOf="@+id/star_icon"
        app:layout_constraintTop_toBottomOf="@+id/star_icon"
        app:layout_constraintVertical_chainStyle="spread"
        />

    <ImageView
        android:id="@+id/native_main_image"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <RelativeLayout
        android:id="@+id/primary_ad_view_layout"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="8dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="8dp"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>