<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Aptoide" />

  <!-- Sizes -->
  <style name="Aptoide.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">?attr/textColorBlackAlpha</item>
  </style>

  <style name="Aptoide.TextView.Regular">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="Aptoide.TextView.Regular.S">
    <item name="android:textSize">14sp</item>
    <item name="android:lineSpacingExtra">3dp</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.Primary">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.OrangeGradientEnd">
    <item name="android:textColor">?attr/textColorOrangeGradientEnd</item>
  </style>

</resources>
