<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_gamification_top_flair"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_gamification_medal_1"
        />
  </RelativeLayout>

  <TextView
      style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="64dp"
      android:layout_marginEnd="64dp"
      android:layout_marginBottom="17dp"
      android:gravity="center_horizontal"
      android:text="Make you first install and get 1000XP"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      >
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        tools:src="@drawable/orange_gradient"
        />

    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/app_icon"
        android:layout_toRightOf="@id/app_icon"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/app_name"
          style="@style/Aptoide.TextView.Medium.M.BlackAlpha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="1dp"
          android:ellipsize="end"
          android:maxLines="1"
          tools:text="Clash Royal"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:orientation="horizontal"
          >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="?attr/ratingDrawable"
            />
        <TextView
            android:id="@+id/app_rating"
            style="@style/Aptoide.TextView.Medium.XXS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="4.2"
            />
      </LinearLayout>
      <TextView
          android:id="@+id/app_downloads"
          style="@style/Aptoide.TextView.Regular.XXS.GreyFog"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="1M Downloads"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
      <TextView
          android:id="@+id/appc_value"
          style="@style/Aptoide.TextView.Medium.XXS.OrangeGradientEnd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          tools:text="0.56 APPC"
          />
      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="6dp"
          android:layout_marginLeft="6dp"
          android:src="@drawable/ic_appcoins_white_border"
          />
    </LinearLayout>
  </RelativeLayout>

  <android.widget.Button
      android:id="@+id/positive_button"
      style="@style/Aptoide.Button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      android:text="@string/install"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/grey_fog_light"
      android:orientation="vertical"
      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_gamification_medal_2"
        />

    <TextView
        style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center_horizontal"
        android:text="And then, come back in 24 hours to unlock the next Challenge!"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_border_orange"
        >
      <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginStart="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="14dp"
          android:layout_marginBottom="14dp"
          android:src="@drawable/ic_white_circle"
          android:tint="#f6f6f6"
          />
      <ImageView
          android:id="@+id/locket"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginStart="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="14dp"
          android:layout_marginBottom="14dp"
          android:src="@drawable/ic_medal_locked"
          android:tint="@color/aptoide_orange"
          />

      <TextView
          style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="27dp"
          android:layout_marginRight="27dp"
          android:layout_toEndOf="@id/locket"
          android:layout_toRightOf="@id/locket"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="This challenge unlocks in 20 hours"
          />
    </RelativeLayout>
  </LinearLayout>
  <android.widget.Button
      android:id="@+id/negative_button"
      style="@style/Aptoide.Button.Flat.SilverMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:text="@string/cancel"
      android:visibility="gone"
      />
</LinearLayout>