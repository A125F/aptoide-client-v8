<manifest package="cm.aptoide.pt.v8engine"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        >

        <activity android:name=".MainActivityFragment">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".activities.StoreActivity"/>

        <receiver android:name=".receivers.LoginBroadcastReceiver">
            <intent-filter>
                <action android:name="${applicationId}.accountmanager.broadcast.login"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.InstalledBroadcastReceiver">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>

                <data android:scheme="package"/>
            </intent-filter>
        </receiver>

        <service android:name=".services.PullingContentService"/>
        <receiver android:name=".receivers.PullingContentReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
            </intent-filter>
        </receiver>

        <provider
            android:exported="true"
            android:authorities="cm.aptoide.pt.StubProvider"
            android:name=".toolbox.ToolboxContentProvider"/>

        <provider
            android:name="cm.aptoide.pt.v8engine.provider.SuggestionProvider"
            android:authorities="cm.aptoide.pt.v8engine.provider.SuggestionProvider"
            android:exported="false"/>

    </application>

</manifest>
