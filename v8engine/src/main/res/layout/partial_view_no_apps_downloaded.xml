<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/no_apps_downloaded"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:visibility="gone"
    tools:visibility="visible"
    >
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_img_no_apps_downloaded"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/error_text"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/fragment_download_no_connection"
        android:layout_below="@+id/error_image"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/error_text2"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/error_text"
        android:gravity="center_horizontal"
        android:text="@string/fragment_download_no_connection_subtitle"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/error_image"
        android:layout_alignRight="@+id/error_image"
        />

  </RelativeLayout>
</ScrollView>