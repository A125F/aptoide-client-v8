<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingEnd="80dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingStart="80dp"
        android:src="@drawable/wizard_aptoide_logo"
        android:tint="@color/aptoide_orange"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingEnd="80dp"
          android:paddingLeft="80dp"
          android:paddingRight="80dp"
          android:paddingStart="80dp"
          android:text="Join the community"
          android:textAlignment="center"
          android:textColor="?android:attr/textColorSecondary"
          android:textSize="24sp"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:paddingEnd="80dp"
          android:paddingLeft="80dp"
          android:paddingRight="80dp"
          android:paddingStart="80dp"
          android:text="Sign up and start creating your users profile and Store. Engage with the community by uploading, rating and sharing apps that you like."
          android:textAlignment="center"
          android:textColor="?android:attr/textColorSecondary"
          android:textSize="12sp"
          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <include layout="@layout/login_signup_fields"/>

    </LinearLayout>

  </LinearLayout>

</ScrollView>
