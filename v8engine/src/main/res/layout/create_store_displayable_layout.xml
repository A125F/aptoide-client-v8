<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_primary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@+id/create_store_action"
      android:minLines="2"
      android:text="@string/create_store_displayable_message"
      android:textColor="?attr/inverseTextColor"
      />
  <Button
      android:id="@+id/create_store_action"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:gravity="center"
      android:text="@string/create_store_displayable_button"
      android:textAllCaps="true"
      android:textSize="12sp"
      style="?attr/customButtonWhite"
      />
</RelativeLayout>