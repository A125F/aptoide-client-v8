<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="5dp"
      android:layout_marginTop="30dp"
      android:text="Success!"
      android:textColor="@color/greenapple"
      android:textSize="25sp"
      android:textStyle="bold" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginEnd="85dp"
      android:layout_marginLeft="85dp"
      android:layout_marginRight="85dp"
      android:layout_marginStart="85dp"
      android:layout_marginTop="5dp"
      android:gravity="center"
      android:lines="3"
      android:text="We successfully connected you with friends that use Aptoide"
      android:textSize="16.9sp" />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/addressbook_contacts_list"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_gravity="center"
      android:padding="8dp" />

  <Button
      android:id="@+id/addressbook_allow_find"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_marginEnd="20dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginStart="20dp"
      android:text="Allow friends to find you" />

  <Button
      android:id="@+id/addressbook_done"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_marginEnd="20dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginStart="20dp"
      android:text="Done" />
</LinearLayout>