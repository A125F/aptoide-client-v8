<android.support.design.widget.AppBarLayout
    android:id="@+id/app_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appview_header_height"
    android:background="#80000000"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:showIn="@layout/fragment_app_view"
    >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginBottom="50dp"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="@dimen/appview_title_left_margin"
        app:expandedTitleTextAppearance="@style/HeaderTextAppView"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"
            >

            <!-- background image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="#80000000"
                >

                <ImageView
                    android:id="@+id/featured_graphic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

            </FrameLayout>

            <!-- app detailed info -->
            <RelativeLayout
                android:id="@+id/badge_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/black_header_background_height"
                android:layout_alignParentBottom="true"
                android:background="#80000000"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="vertical">

                    <!--
                    @drawable/ic_badge_trusted
                    @drawable/ic_badge_unknown
                    @drawable/ic_badge_warning
                    -->
                    <ImageView
                        android:id="@+id/badge_img"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerInside"
                        tools:layout_height="48dp"
                        tools:layout_width="48dp"
                        tools:src="@color/red"
                        />

                    <!--
                    @string/appview_header_trusted_text
                    @string/unknown
                    @string/warning
                    -->
                    <TextView
                        android:id="@+id/badge_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        tools:text="@string/trusted_app"
                        />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="12dp"
                >

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="@dimen/appview_header_app_image_size"
                    android:layout_height="@dimen/appview_header_app_image_size"
                    app:layout_anchor="@id/app_bar"
                    app:layout_anchorGravity="bottom|left|start"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="45dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginStart="12dp"
                    >


                    <RatingBar
                        android:id="@+id/rating_bar_top"
                        style="@style/RatingBarGridItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/appview_top_rating_top_margin"
                        android:numStars="5"
                        />

                    <LinearLayout
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="19dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_dimension" />

                            <TextView
                                android:id="@+id/file_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:maxLines="1"
                                android:maxWidth="50dp"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="9dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_appview_version" />

                            <TextView
                                android:id="@+id/version_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:maxLines="1"
                                android:maxWidth="50dp"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_appview_download_icon" />

                            <TextView
                                android:id="@+id/downloads_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:maxLines="1"
                                android:maxWidth="50dp"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="?attr/toolbarTheme"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.CollapsingToolbarLayout>

</android.support.design.widget.AppBarLayout>