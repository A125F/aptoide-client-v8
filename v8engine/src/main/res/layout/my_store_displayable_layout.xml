<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_2"
    android:orientation="vertical"
    tools:backgroundTint="@color/red_700"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      >

    <ImageView
        android:id="@+id/store_icon"
        android:layout_width="63dp"
        android:layout_height="63dp"
        tools:src="@drawable/ic_avatar_apps"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/store_icon"
        android:layout_toEndOf="@id/store_icon"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/store_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:textSize="@dimen/text_size_medium_large"
          android:textStyle="bold"
          tools:text="Sameveda store"
          />
      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/my_store_created_displayable_message"
          android:textSize="@dimen/text_size_small"
          />

    </LinearLayout>

  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@drawable/background_card_overlay"

      >
    <TextView
        android:id="@+id/created_store_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/create_store_displayable_created_store_message"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/created_store_text"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/create_store_displayable_explore_message"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        />

    <Button
        android:id="@+id/explore_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/create_store_displayable_explore_button"
        android:textColor="@color/black"
        style="@style/StoreWhiteButton"
        />
  </RelativeLayout>
</LinearLayout>