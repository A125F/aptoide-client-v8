<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Widget.Aptoide.Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:id="@+id/card_toolbar"
                android:theme="@style/AppBaseTheme"
                android:layout_width="match_parent"
                android:layout_height="72dp"/>

            <ImageView
                tools:ignore="contentDescription"
                tools:src="@drawable/img_people_mockup"
                android:id="@+id/card_image"
                android:layout_margin="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/card_title"
                style="@style/Widget.Aptoide.Card.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginEnd="48dp"
                tools:text="Aptoide"/>

            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/card_subtitle"
                style="@style/Widget.Aptoide.Card.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="48dp"
                tools:text="HÃ¡ duas horas"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/separators_grey"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/article_url"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:id="@+id/article_thumbnail"
                tools:ignore="contentDescription"
                android:layout_marginStart="72dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                tools:src="@drawable/icon_brand_aptoide"
                android:layout_width="120dp"
                android:layout_height="72dp"/>

            <TextView
                android:layout_alignTop="@id/article_thumbnail"
                tools:text="Best backup apps: save all your Android's innards"
                android:id="@+id/article_title"
                android:layout_marginEnd="16dp"
                android:lines="4"
                android:ellipsize="end"
                style="@style/Widget.Aptoide.Card.Thumbnail"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/article_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <Button
            style="@style/Widget.Aptoide.Card.Button"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="72dp"
            android:gravity="center_vertical"
            tools:text="Get app Game of War"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>

