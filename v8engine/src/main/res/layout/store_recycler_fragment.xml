<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/partial_view_incl_no_network"/>

    <include layout="@layout/partial_view_error"/>

    <include layout="@layout/partial_view_progress_bar"/>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/recycler_margin"
        android:paddingRight="@dimen/recycler_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:translationY="-60dp"
        app:layout_anchor="@id/recycler_view"
        app:layout_anchorGravity="bottom|right|end"/>

    <!--<include layout="@layout/recycler_fragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>-->
</android.support.design.widget.CoordinatorLayout>