<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    >

  <!-- social login -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="10dp"
      android:paddingEnd="15dp"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:paddingStart="15dp"
      >

    <!--
    android:foreground="@drawable/rounded_corners_white"
    -->
    <LinearLayout
        android:id="@+id/fb_login_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corners_facebook"
        android:orientation="horizontal"
        >
      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:contentDescription="@string/com_facebook_loginview_log_in_button_long"
          android:src="@drawable/facebook_ic"
          android:layout_gravity="bottom"
          android:layout_marginLeft="12dp"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@null"
          android:text="@string/connect_with_facebook"
          android:textSize="16sp"
          style="@style/WidgetButtonCustom"
          />
    </LinearLayout>

    <Button
        android:id="@+id/google_login_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:text="@string/connect_with_google"
        android:drawableLeft="@drawable/google_plus_ic"
        style="@style/Aptoide.Login.Google"
        />

  </LinearLayout>

  <include
      layout="@layout/credentials_edit_texts"
      android:id="@+id/credentials_edit_texts"
      android:visibility="gone"
      tools:visibility="visible"
      />
  <LinearLayout
      android:id="@+id/login_signup_selection_layout"
      android:layout_width="match_parent"
      android:layout_height="42dp"
      android:orientation="horizontal"
      android:paddingEnd="20dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingStart="20dp"
      android:weightSum="2"
      >
    <Button
        android:id="@+id/show_join_aptoide_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:text="@string/register"
        android:textSize="16sp"
        style="?attr/customButtonThinLine"
        />
    <Button
        android:id="@+id/show_login_with_aptoide_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:text="@string/login"
        android:textSize="16sp"
        style="?attr/customButtonThinLine"
        />
  </LinearLayout>

  <!-- login -->

</LinearLayout>
