<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <android.support.design.widget.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        />
  </android.support.design.widget.AppBarLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        >
      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <EditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timeline_post_hint_left_margin"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:gravity="top|start"
            android:hint="@string/timeline_message_share_on_timeline"
            android:inputType="textUri|textMultiLine"
            android:minLines="3"
            android:textAppearance="@style/Aptoide.TextView.Regular.L"
            android:textColor="@color/grey_700"
            />
      </android.support.design.widget.TextInputLayout>
      <ImageView
          android:id="@+id/preview_image"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="25dp"
          android:visibility="gone"
          tools:background="@color/orange_700"
          tools:scaleType="centerInside"
          tools:src="@drawable/wizard_community"
          tools:visibility="visible"
          />
      <ProgressBar
          android:id="@+id/preview_progress_bar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:indeterminate="true"
          android:visibility="gone"
          tools:visibility="visible"
          />
      <TextView
          android:id="@+id/preview_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/label_padding"
          android:layout_marginStart="@dimen/label_padding"
          android:layout_marginTop="@dimen/label_padding"
          android:gravity="center_horizontal"
          android:textColor="@color/black_87_alpha"
          android:textSize="@dimen/timeline_post_post_title_title"
          android:visibility="gone"
          tools:text="Preview Title"
          tools:visibility="visible"
          />

      <TextView
          android:id="@+id/related_apps_header"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/label_padding"
          android:layout_marginTop="@dimen/label_padding"
          android:text="@string/timeline_title_related_app"
          android:textAppearance="@style/Aptoide.TextView.Medium.S"
          android:textColor="@color/black"
          android:textSize="@dimen/text_size_huge"
          android:visibility="gone"
          tools:visibility="visible"
          />
      <ProgressBar
          android:id="@+id/related_apps_progress_bar"
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:indeterminate="true"
          android:visibility="gone"
          tools:visibility="visible"
          style="@style/Widget.AppCompat.ProgressBar.Horizontal"
          />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/related_apps_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scrollbars="horizontal"
          />

    </LinearLayout>
  </ScrollView>
</LinearLayout>
