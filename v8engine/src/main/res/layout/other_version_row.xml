<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingEnd="20dp"
    android:paddingLeft="44dp"
    android:paddingRight="20dp"
    android:paddingStart="44dp"
    android:paddingTop="16dp"
    android:weightSum="2"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/version_icon"
            android:layout_width="@dimen/other_version_icon_size"
            android:layout_height="@dimen/other_version_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:src="@drawable/ic_appview_version"
            android:tint="@color/greenapple"
            />

        <TextView
            android:id="@+id/version_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/other_version_icon_size"
            android:layout_alignTop="@id/version_icon"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@id/version_icon"
            android:gravity="center_vertical"
            android:maxWidth="100dp"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            tools:text="1.00.258"
            />

        <ImageView
            android:id="@+id/badge_icon"
            android:layout_width="@dimen/other_version_icon_size"
            android:layout_height="@dimen/other_version_icon_size"
            android:layout_toEndOf="@id/version_name"
            android:layout_toRightOf="@id/version_name"
            android:src="@drawable/ic_badge_trusted"
            />

        <TextView
            android:id="@+id/version_date"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/version_icon"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_medium_small"
            tools:text="1 month ago"
            />

        <TextView
            android:id="@+id/downloads"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/version_date"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_medium_small"
            tools:text="11K downloads"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/store_icon"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            tools:src="@drawable/user_account_white"
            />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="Animirais Studio"
            />

        <TextView
            android:id="@+id/store_followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/text_size_small"
            tools:text="2534 Followers"
            />

    </LinearLayout>

</LinearLayout>
