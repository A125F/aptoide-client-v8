<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Widget.Aptoide.Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <ImageView
                tools:ignore="contentDescription"
                tools:src="@drawable/img_people_mockup"
                android:id="@+id/card_image"
                android:layout_margin="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/card_title"
                style="@style/Widget.Aptoide.Card.Title.LatestApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                tools:text="Hamata6 Store"/>

            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/card_subtitle"
                style="@style/Widget.Aptoide.Card.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                tools:text="HÃ¡ duas horas"/>

             <View
                android:layout_alignParentBottom="true"
                android:background="@color/separators_grey"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="12dp"
            android:lines="1"
            android:ellipsize="end"
            style="@style/Widget.Aptoide.Card.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/displayable_social_timeline_store_latest_apps_headline"/>

        <HorizontalScrollView
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="4dp"
                android:id="@+id/displayable_social_timeline_store_latest_apps_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

