<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/card"
  style="@style/Widget.Aptoide.Card"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <RelativeLayout
      android:id="@+id/displayable_social_timeline_article_header"
      android:layout_width="match_parent"
      android:layout_height="63.3dp"
      android:orientation="horizontal">


      <ImageView
        android:id="@+id/card_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10.7dp"
        android:layout_marginStart="10.7dp"
        android:layout_marginTop="14dp"
        tools:ignore="contentDescription" />
      <ImageView
        android:id="@+id/card_user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="27.7dp"
        android:layout_marginStart="27.7dp"
        android:layout_marginTop="14dp"
        tools:ignore="contentDescription" />

      <TextView
        android:id="@+id/card_title"
        style="@style/Widget.Aptoide.Card.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="14.7dp"
        android:ellipsize="end"
        android:lines="1"
        tools:text="Hamata6 Store" />

      <TextView
        android:id="@+id/card_subtitle"
        style="@style/Widget.Aptoide.Card.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_title"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:layout_marginStart="72dp"
        android:ellipsize="end"
        android:lines="1"
        tools:text="HÃ¡ duas horas" />

      <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:layout_marginTop="-2dp"
        android:src="@drawable/social_icon" />

      <View
        android:id="@+id/card_custom_view_line_separator"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:background="@color/timeline_separator" />
    </RelativeLayout>


    <include layout="@layout/partial_social_timeline_thumbnail" />

    <View
      android:id="@+id/partial_social_timeline_thumbnail_divider"
      android:layout_width="match_parent"
      android:layout_height="0.7dp"
      android:layout_marginBottom="5dp"
      android:layout_marginEnd="15dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="15dp"
      android:layout_marginStart="12dp"
      android:background="@color/timeline_separator"
      android:visibility="visible" />

    <include layout="@layout/social_bar_timeline" />
  </LinearLayout>
</android.support.v7.widget.CardView>

