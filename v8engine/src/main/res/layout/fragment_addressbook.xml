<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addressbook_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginStart="30dp"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="24.3dp"
        android:src="@drawable/addressbook_graphic"
        />

    <TextView
        android:id="@+id/addressbook_increase_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/addressbook_increase_network_message"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/addressbook_connect_with_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/addressbook_connect_with_friends_message"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <Button
          android:id="@+id/addressbook_sync_button"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:drawableRight="@drawable/ic_check"
          android:padding="10dp"
          android:text="@string/addressbook_sync"
          style="?attr/customButton"
          />
      <ProgressBar
          android:id="@+id/addressbook_addressbook_sync_progress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_margin="5dp"
          android:visibility="invisible"
          />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        >

      <!-- TODO make custom button selectors + loading/check animation -->
      <Button
          android:id="@+id/facebook_sync_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"
          android:padding="5dp"
          android:text="@string/facebook"
          />

      <!-- TODO make custom button selectors + loading/check animation -->
      <Button
          android:id="@+id/twitter_sync_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"
          android:padding="5dp"
          android:text="@string/twitter"
          />

    </LinearLayout>

    <TextView
        android:id="@+id/addressbook_not_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="@string/not_now"
        android:textAllCaps="true"
        />

    <TextView
        android:id="@+id/addressbook_2nd_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:clickable="false"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/addressbook_2nd_msg"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorSecondary"
        />

    <TextView
        android:id="@+id/addressbook_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/addressbook_3rd_msg"
        android:textColor="?android:attr/textColorSecondary"
        />
  </LinearLayout>
</ScrollView>