<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addressbook_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginStart="30dp"
      android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="24.3dp"
        android:src="@drawable/addressbook_graphic" />

    <TextView
        android:id="@+id/addressbook_increase_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/addressbook_increase_network_message"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/addressbook_connect_with_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/addressbook_connect_with_friends_message"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp" />

    <Button
        android:id="@+id/addressbook_sync_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/addressbook_button_rectangle_shape"
        android:drawableRight="@drawable/reload"
        android:padding="10dp"
        android:text="@string/addressbook_sync" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

      <RelativeLayout
          android:id="@+id/facebook_sync_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginEnd="9dp"
          android:layout_marginRight="9dp"
          android:layout_weight="0.5"
          android:background="@drawable/addressbook_facebook_button_rectangle_shape"
          android:gravity="center"
          android:padding="5dp"
          android:text="@string/facebook"
          android:textColor="@color/facebook">

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_action_facebook" />

        <ImageView
            android:id="@+id/check_or_reload_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/reload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/check_or_reload_facebook"
            android:text="@string/facebook" />

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/twitter_sync_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="9dp"
          android:layout_marginStart="9dp"
          android:layout_weight="0.5"
          android:background="@drawable/addressbook_twitter_button_rectangle_shape"
          android:gravity="center"
          android:padding="5dp"
          android:textColor="@color/twitter_color">

        <ImageView
            android:id="@+id/twitter_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_action_twitter" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/twitter_icon"
            android:text="@string/twitter" />

        <ImageView
            android:id="@+id/check_or_reload_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/reload" />

      </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/addressbook_allow_find"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/addressbook_button_rectangle_shape"
        android:text="@string/addressbook_allow_friends_find" />

    <TextView
        android:id="@+id/addressbook_not_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="@string/not_now"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/addressbook_2nd_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:clickable="false"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/addressbook_2nd_msg"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/addressbook_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/addressbook_3rd_msg"
        android:textColor="?android:attr/textColorSecondary" />
  </LinearLayout>
</ScrollView>