<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addressbook_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <android.support.design.widget.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/toolbarTheme" />

  </android.support.design.widget.AppBarLayout>

  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="44.3dp"
          android:layout_marginBottom="10dp"
          android:src="@drawable/addressbook_graphic"/>

      <TextView
          android:id="@+id/addressbook_increase_network"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="5dp"
          android:layout_weight="1"
          android:gravity="center"
          android:lineSpacingExtra="5dp"
          android:text="@string/addressbook_increase_network_message"
          android:textColor="?android:attr/textColorSecondary" />

      <TextView
          android:id="@+id/addressbook_connect_with_friends"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_marginBottom="10dp"
          android:layout_weight="1"
          android:gravity="center"
          android:lineSpacingExtra="5dp"
          android:text="@string/addressbook_connect_with_friends_message"
          android:textColor="?android:attr/textColorSecondary" />



    </LinearLayout>
  </ScrollView>
</LinearLayout>