<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/backgroundCard"
    android:padding="5dp"
    tools:layout_marginBottom="2dp"
    tools:layout_marginLeft="5dp"
    tools:layout_marginRight="5dp"
    tools:layout_marginTop="2dp"
    >
  <TextView
      android:id="@+id/install_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="38dp"
      android:layout_marginStart="38dp"
      android:layout_marginRight="38dp"
      android:layout_marginEnd="38dp"
      android:layout_marginTop="26dp"
      android:textAlignment="center"
      android:textSize="14sp"
      tools:text="@string/install_app_outter_pt1"
      />
  <include
      android:id="@+id/vertical_separator"
      layout="@layout/separator_vertical"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/dark_gray"
      android:layout_marginLeft="14dp"
      android:layout_marginStart="14dp"
      android:layout_marginRight="14dp"
      android:layout_marginEnd="14dp"
      android:layout_marginTop="26dp"
    />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="18dp"
      android:layout_marginBottom="20dp"
      >
    <ImageView
        android:id="@+id/app_image"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@color/amber_700"
        android:layout_gravity="center_vertical"
        />

  <RelativeLayout
      android:id="@+id/main_info_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/app_image"
      android:layout_toEndOf="@id/app_image"
      android:layout_marginLeft="8dp"
      >
      <TextView
          android:id="@+id/app_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Aptoide uploader"
          />
      <!-- rating -->
      <View
          android:id="@+id/app_rating"
          android:layout_width="50dp"
          android:layout_height="10dp"
          android:layout_below="@id/app_name"
          android:layout_alignStart="@id/app_name"
          />
      <TextView
          android:id="@+id/app_downloads"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/app_rating"
          android:text="Downloads: 99 k"
          />
      <TextView
          android:id="@+id/app_version"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/app_downloads"
          android:text="Version: 2"
          />
      <TextView
          android:id="@+id/app_size"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/app_version"
          android:text="Size: 5.6 MB"
          />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_info_layout"
        android:layout_toEndOf="@id/main_info_layout"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
      <Button
          android:id="@+id/app_install_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Widget.AppCompat.Button.Colored"
          android:text="@string/install"
          android:textSize="12sp"
          android:paddingLeft="28dp"
          android:paddingStart="28dp"
          android:paddingRight="28dp"
          android:paddingEnd="28dp"
          android:paddingTop="12dp"
          android:paddingBottom="12dp"
          android:layout_gravity="right"
          />
    </FrameLayout>

  </RelativeLayout>
</LinearLayout>
