<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeline_stats_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/backgroundMain"
    android:gravity="center"
    >
  <TextView
      android:id="@+id/followers"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_toLeftOf="@+id/leftSeparator"
      android:layout_toStartOf="@+id/leftSeparator"
      android:gravity="center"
      android:paddingBottom="10dp"
      android:paddingTop="10dp"
      android:textColor="?attr/colorPrimary"
      android:textSize="@dimen/text_size_large"
      tools:text="following 512"
      />

  <View
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/leftSeparator"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      android:background="@color/lighter_custom_gray"
      />

  <TextView
      android:id="@+id/following"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_toRightOf="@+id/leftSeparator"
      android:layout_toEndOf="@+id/leftSeparator"
      android:gravity="center"
      android:paddingBottom="10dp"
      android:paddingTop="10dp"
      android:textColor="?attr/colorPrimary"
      android:textSize="@dimen/text_size_large"
      tools:text="followers 100"
      />

</RelativeLayout>