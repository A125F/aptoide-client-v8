<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Widget.Aptoide.Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/displayable_social_timeline_app_update_card_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                tools:ignore="contentDescription"
                tools:src="@drawable/img_people_mockup"/>

            <TextView
                android:id="@+id/displayable_social_timeline_app_update_card_title"
                style="@style/Widget.Aptoide.Card.Title.LatestApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="48dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:lines="1"
                tools:text="Hamata6 Store"/>

            <TextView
                android:id="@+id/displayable_social_timeline_app_update_card_card_subtitle"
                style="@style/Widget.Aptoide.Card.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/displayable_social_timeline_app_update_card_title"
                android:layout_marginEnd="48dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="48dp"
                android:layout_marginStart="72dp"
                android:ellipsize="end"
                android:lines="1"
                tools:text="HÃ¡ duas horas"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/separators_grey"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/displayable_social_timeline_app_update_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="16dp"
                android:scaleType="fitCenter"
                tools:ignore="contentDescription"
                tools:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/displayable_social_timeline_app_update_icon"
                android:layout_toEndOf="@id/displayable_social_timeline_app_update_icon"
                android:layout_toRightOf="@id/displayable_social_timeline_app_update_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/displayable_social_timeline_app_update_name"
                    style="@style/Widget.Aptoide.Card.Title.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/displayable_social_timeline_app_update_name"
                    tools:text="App Snapchat"/>

                <TextView
                    android:id="@+id/displayable_social_timeline_app_update"
                    style="@style/Widget.Aptoide.Card.Title.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/displayable_social_timeline_app_has_update"
                    tools:text="has an update"/>

                <TextView
                    android:id="@+id/displayable_social_timeline_app_update_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/displayable_social_timeline_app_update_version"
                    tools:text="Version: 1.2.3"/>


                <TextView
                    android:id="@+id/displayable_social_timeline_app_update_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/displayable_social_timeline_app_update_error"
                    android:textColor="@color/red_700"
                    android:visibility="gone"
                    tools:text="Update Error"
                    tools:visibility="visible"/>

                <Button
                    android:id="@+id/displayable_social_timeline_app_update_button"
                    style="@style/Widget.Aptoide.Card.Button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:drawableLeft="@drawable/timeline_update_app"
                    android:drawableStart="@drawable/timeline_update_app"
                    android:gravity="center_vertical"
                    android:text="@string/displayable_social_timeline_app_update_button"
                    tools:text="Update application"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

