<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Widget.Aptoide.Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:theme="@style/AppBaseTheme"/>

        <ImageView
            android:id="@+id/displayable_social_timeline_app_update_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="16dp"
            android:scaleType="fitCenter"
            tools:ignore="contentDescription"
            tools:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_alignTop="@id/displayable_social_timeline_app_update_icon"
            android:layout_toEndOf="@id/displayable_social_timeline_app_update_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/displayable_social_timeline_app_update_name"
                android:text="@string/displayable_social_timeline_app_update_name"
                tools:text="App Snapchat"
                android:lines="1"
                android:ellipsize="end"
                style="@style/Widget.Aptoide.Card.Title.Large"
                android:layout_width="match_parent"
                android:layout_marginEnd="48dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/displayable_social_timeline_app_update"
                android:text="@string/displayable_social_timeline_app_has_update"
                tools:text="has an update"
                android:lines="1"
                android:ellipsize="end"
                style="@style/Widget.Aptoide.Card.Title.Large"
                android:layout_width="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/displayable_social_timeline_app_update_version"
                android:text="@string/displayable_social_timeline_app_update_version"
                android:layout_marginTop="4dp"
                tools:text="Version: 1.2.3"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/displayable_social_timeline_app_update_button"
                android:text="@string/displayable_social_timeline_app_update_button"
                style="@style/Widget.Aptoide.Card.Button"
                android:drawableStart="@drawable/ic_update_version"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                tools:text="Update application"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

