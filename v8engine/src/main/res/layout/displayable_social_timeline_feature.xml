<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Widget.Aptoide.Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:id="@+id/card_toolbar"
                android:theme="@style/AppBaseTheme"
                android:layout_width="match_parent"
                android:layout_height="72dp"/>

            <ImageView
                tools:ignore="contentDescription"
                tools:src="@drawable/img_people_mockup"
                android:id="@+id/card_image"
                android:layout_margin="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/card_title"
                style="@style/Widget.Aptoide.Card.Title.Aptoide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginEnd="48dp"
                tools:text="Aptoide Team"/>

            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/card_subtitle"
                style="@style/Widget.Aptoide.Card.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="48dp"
                tools:text="HÃ¡ duas horas"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/separators_grey"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
        </RelativeLayout>

        <include layout="@layout/partial_social_timeline_thumbnail"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

