<?xml version="1.0" encoding="utf-8"?>
<!--
android:fitsSystemWindows="true"
-->
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottom_skip_bar_height"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        >

      <android.support.design.widget.AppBarLayout
          android:id="@+id/appbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/toolbarTheme"
            />
      </android.support.design.widget.AppBarLayout>

      <ImageView
          android:layout_width="200dp"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:layout_margin="20dp"
          android:src="@drawable/wizard_aptoide_logo"
          android:tint="@android:color/white"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="bottom|center_horizontal"
          android:paddingEnd="80dp"
          android:paddingLeft="80dp"
          android:paddingRight="80dp"
          android:paddingStart="80dp"
          android:text="Join the community"
          android:textAlignment="center"
          android:textColor="@color/light_custom_gray"
          android:textSize="42sp"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="top|center_horizontal"
          android:paddingEnd="80dp"
          android:paddingLeft="80dp"
          android:paddingRight="80dp"
          android:paddingStart="80dp"
          android:text="Sign up and start creating your user profile and Store. Engage with the community by uploading, rating and sharing apps that you like."
          android:textAlignment="center"
          android:textColor="@color/light_custom_gray"
          android:textSize="26sp"
          />

    </LinearLayout>

  </ScrollView>

  <FrameLayout
      android:id="@+id/login_signup_layout"
      android:layout_width="match_parent"
      android:layout_height="380dp"
      android:elevation="12dp"
      android:visibility="visible"
      app:behavior_hideable="false"
      app:behavior_peekHeight="300dp"
      app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
      />

</android.support.design.widget.CoordinatorLayout>
