<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_network_connection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbars="none"
    android:visibility="gone"
    tools:visibility="visible"
    >


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="3dp"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/error2"
        />

    <TextView
        android:id="@+id/no_connextion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5.3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5.3dp"
        android:gravity="center_horizontal"
        android:text="@string/could_not_connect_internet"
        android:textColor="@color/aptoide_orange"
        android:textStyle="bold"
        style="?android:textAppearanceLarge"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/retry"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10.7dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="4dp"
        android:text="@string/retry_connection"
        android:textAllCaps="true"
        android:textColor="@color/default_color"
        android:textSize="16sp"
        style="?attr/customButtonThinLine"
        />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10.3dp"
        android:layout_marginRight="10.3dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_action_spotshare_orange"
            />
        <TextView
            android:id="@+id/call_to_spot_and_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10.3dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center_horizontal"
            android:text="@string/having_some_trouble_v2"
            style="?android:textAppearanceMedium"
            />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/spot_and_share_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/flat_selector"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="4dp"
            android:text="@string/go_to_spot_and_share"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            />

      </LinearLayout>


    </android.support.v7.widget.CardView>


  </LinearLayout>

</ScrollView>