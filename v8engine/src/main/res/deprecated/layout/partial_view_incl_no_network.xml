<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_network_connection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:visibility="gone"
    tools:visibility="visible"
    >


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/error2"
        />

    <TextView
        android:id="@+id/no_connextion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/could_not_connect_internet"
        android:textColor="@color/aptoide_orange"
        android:textStyle="bold"
        style="?android:textAppearanceLarge"
        />

    <TextView
        android:id="@+id/call_to_spot_and_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/share_via_spot_and_share"
        style="?android:textAppearanceMedium"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/spot_and_share_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/flat_selector"
        android:focusable="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/go_to_spot_and_share"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:focusable="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/download_retry"
        android:textAllCaps="true"
        android:textColor="@color/default_color"
        android:textSize="16sp"
        style="?attr/customButtonThinLine"
        />

  </LinearLayout>

</ScrollView>