<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/sender_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      tools:text="xxx is sending"
      style="@style/Aptoide.TextView.Regular.M.Grey"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/transfer_app_icon"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@color/almost_black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        >

      <ProgressBar
          android:id="@+id/transfer_record_progress_bar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5dp"
          android:indeterminate="false"
          style="?android:attr/progressBarStyleHorizontal"
          />

      <Button
          android:id="@+id/transfer_record_accept_app_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="accept"
          >

      </Button>

    </LinearLayout>

  </LinearLayout>
</LinearLayout>