<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="400dp"
  android:layout_height="wrap_content"
  android:layout_gravity="center_horizontal"
  android:background="?attr/backgroundCardColor"
  android:orientation="vertical">

  <AutoCompleteTextView
    android:id="@+id/email"
    style="@style/Aptoide.TextView.Regular.S.Primary"
    android:layout_width="match_parent"
    android:layout_height="@dimen/login_field_height"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="32dp"
    android:background="?attr/loginInputBackground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:hint="Your email here..."
    android:imeOptions="actionDone"
    android:inputType="textEmailAddress"
    android:maxLength="@integer/max_username_char_length"
    android:maxLines="1"
    android:paddingStart="20dp"
    android:paddingLeft="20dp" />


  <!-- forgot password or agree with company terms -->
  <LinearLayout
    android:id="@+id/login_button_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
      android:id="@+id/use_case_description"
      style="@style/Aptoide.TextView.Regular.S.Grey"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginEnd="32dp"
      android:layout_marginRight="32dp"
      android:text="We'll send you a temporary login code." />

    <TextView
      android:id="@+id/email_error_message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginEnd="32dp"
      android:layout_marginRight="32dp"
      android:drawableStart="@drawable/ic_error_outline_red"
      android:drawableLeft="@drawable/ic_error_outline_red"
      android:drawablePadding="5dp"
      android:drawableTint="@color/red"
      android:text="This email isn't valid"
      android:textColor="@color/red"
      android:visibility="gone"
      tools:visibility="visible" />

    <Button
      android:id="@+id/button_login"
      style="@style/Aptoide.Button.Install"
      android:layout_width="match_parent"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginBottom="10dp"
      android:text="Connect with Email" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:padding="8dp">

      <TextView
        style="@style/Aptoide.TextView.Medium.XS.BlackAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_badge_trusted"
        android:drawableLeft="@drawable/ic_badge_trusted"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="Secure Login - No passwords saved on our side" />
    </LinearLayout>


  </LinearLayout>
</LinearLayout>
