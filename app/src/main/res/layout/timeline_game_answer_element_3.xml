<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >


  <ImageView
      android:id="@+id/game_card_question3_icon_left"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginBottom="5dp"
      android:layout_marginLeft="45dp"
      android:layout_marginStart="45dp"
      android:layout_marginTop="15dp"
      tools:src="@mipmap/ic_launcher"
      />

  <TextView
      android:id="@+id/game_card_question3_answer_left"
      android:layout_width="120dp"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/game_card_question3_icon_left"
      android:layout_marginLeft="6dp"
      android:layout_marginStart="6dp"
      android:ellipsize="end"
      android:gravity="center"
      android:maxLines="2"
      android:padding="5dp"
      android:singleLine="false"
      android:text="Left: Answer2"
      style="@style/Aptoide.TextView.Regular.S.BlackAlpha"
      />

  <ImageView
      android:id="@+id/game_card_question3_icon_right"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="5dp"
      android:layout_marginEnd="50dp"
      android:layout_marginRight="50dp"
      android:layout_marginTop="15dp"
      tools:src="@mipmap/ic_launcher"
      />

  <TextView
      android:id="@+id/game_card_question3_answer_right"
      android:layout_width="120dp"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@id/game_card_question3_icon_right"
      android:layout_centerVertical="true"
      android:layout_marginEnd="10dp"
      android:layout_marginRight="10dp"
      android:ellipsize="end"
      android:gravity="center"
      android:maxLines="2"
      android:padding="5dp"
      android:singleLine="false"
      android:text="Right: Answer1"
      style="@style/Aptoide.TextView.Regular.S.BlackAlpha"
      />

  <View
      android:id="@+id/answer_separator"
      android:layout_width="1dp"
      android:layout_height="50dp"
      android:layout_centerInParent="true"
      android:background="@color/medium_gray"
      />

</RelativeLayout>