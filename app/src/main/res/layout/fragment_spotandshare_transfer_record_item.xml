<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/spotandshare_transfer_record_card"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="16dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <include layout="@layout/spotandshare_transfer_record_card_header"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:orientation="horizontal"
          android:weightSum="1"
          >

        <ImageView
            android:id="@+id/transfer_app_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@color/almost_black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.80"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/transfer_record_app_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="Aptoide Lite"
              style="@style/Aptoide.TextView.Medium.S.BlackAlpha"
              >
          </TextView>

          <ProgressBar
              android:id="@+id/transfer_record_progress_bar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:indeterminate="false"
              android:visibility="invisible"
              style="?android:attr/progressBarStyleHorizontal"
              />

          <TextView
              android:id="@+id/transfer_record_app_size"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="3dp"
              tools:text="DOWNLOAD COMPLETED"
              style="@style/Aptoide.TextView.Regular.XS.Grey"
              />

        </LinearLayout>

        <ImageButton
            android:id="@+id/transfer_record_accept_app_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/round_circle_orange"
            android:src="@drawable/ic_download_icon"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            >
        </ImageButton>


        <Button
            android:id="@+id/transfer_record_install_app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@color/white"
            android:text="@string/spotandshare_button_install"
            android:textAllCaps="true"
            android:textColor="@color/aptoide_orange"
            android:visibility="gone"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            />

      </LinearLayout>
    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>