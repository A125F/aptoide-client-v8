<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    >

  <Button
      android:id="@+id/appview_install_button"
      android:layout_width="249dp"
      android:layout_height="@dimen/install_button_height"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="13dp"
      android:text="@string/install"
      android:textAllCaps="true"
      android:textSize="16sp"
      android:visibility="visible"
      style="@style/Aptoide.Button"
      />

  <cm.aptoide.aptoideviews.downloadprogressview.DownloadProgressView
      android:id="@+id/download_progress_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="19dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="22dp"
      android:layout_marginTop="9dp"
      />


</LinearLayout>