<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="8dp"
    android:background="?attr/backgroundMain"
    >

  <ImageView
      android:id="@+id/app_icon"
      android:layout_width="39dp"
      android:layout_height="39dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/app_name"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/app_name"
      style="@style/Aptoide.TextView.Regular.S.BlackAlpha"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="13dp"
      android:layout_marginLeft="13dp"
      android:layout_marginEnd="4dp"
      android:layout_marginRight="4dp"
      android:background="?attr/backgroundMain"
      android:ellipsize="end"
      android:maxLines="1"
      app:layout_constraintBottom_toTopOf="@+id/app_size"
      app:layout_constraintLeft_toRightOf="@id/app_icon"
      app:layout_constraintRight_toLeftOf="@+id/uninstall_button"
      app:layout_constraintTop_toTopOf="@id/app_icon"
      tools:text="revolut best market app test adasd asdasd asdas dasaaaaaaa"
      />


  <TextView
      android:id="@+id/app_size"
      style="@style/Aptoide.TextView.Regular.XXS.GreyMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/backgroundMain"
      android:ellipsize="end"
      android:maxLines="1"
      app:layout_constraintBottom_toBottomOf="@id/app_icon"
      app:layout_constraintLeft_toLeftOf="@id/app_name"
      app:layout_constraintTop_toBottomOf="@id/app_name"
      tools:text="482.23MB"
      />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/uninstall_button"
      style="@style/Aptoide.Button.Ghost.M.Uninstall"
      android:layout_width="66dp"
      android:layout_height="32dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginBottom="3dp"
      android:text="@string/uninstall_button"
      app:layout_constraintBottom_toBottomOf="@id/app_icon"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/app_icon"
      tools:text="uninstall"
      />

</androidx.constraintlayout.widget.ConstraintLayout>