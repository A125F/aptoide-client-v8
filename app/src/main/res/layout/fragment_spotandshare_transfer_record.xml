<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_fog_light"
    android:fitsSystemWindows="true"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <android.support.v7.widget.Toolbar
        android:id="@+id/spotandshare_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleMarginStart="30dp"
        app:titleTextColor="@color/white"
        >

      <LinearLayout
          android:id="@+id/spotandshare_toolbar_friends_information_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:layout_marginBottom="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="8dp"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/user_account_white"
            />

        <TextView
            android:id="@+id/spotandshare_toolbar_number_of_friends_connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="0"
            style="@style/Aptoide.TextView.Medium.S"
            />

      </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/bottom_sheet_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <android.support.v7.widget.RecyclerView
          android:id="@+id/transfer_record_recycler_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:clipToPadding="false"
          android:paddingBottom="68dp"
          android:scrollbars="vertical"
          >
      </android.support.v7.widget.RecyclerView>


      <LinearLayout
          android:id="@+id/bottom_sheet"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/spotandshare_bottom_sheet_background"
          android:paddingTop="2dp"
          app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
          >

        <include layout="@layout/fragment_spotandshare_pick_apps"/>

      </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

  </LinearLayout>


</android.support.design.widget.CoordinatorLayout>