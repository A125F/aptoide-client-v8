<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AptoideThemeDefault"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="visible"
      >
    <LinearLayout
        android:id="@+id/comments_signup_popup_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="12dp"
          android:text="Join Our Community"
          android:textColor="@color/black"
          style="@style/Aptoide.TextView.Regular.L"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginTop="8dp"
          android:text="Log in or sign up to get the most of Aptoide. We&apos;ll never post anything without your permission."
          style="@style/Aptoide.TextView.Regular.M"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:paddingEnd="18dp"
          android:paddingLeft="18dp"
          android:paddingRight="18dp"
          android:paddingStart="18dp"
          android:paddingTop="8dp"
          >


        <Button
            android:id="@+id/comment_login_fb_login_button"
            android:layout_width="match_parent"
            style="@style/Aptoide.Button.FacebookFull"
            />

        <Button
            android:id="@+id/comment_login_google_login_button"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            style="@style/Aptoide.Button.Ghost.GreyFogLight.GoogleFull"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="14dp"
          android:layout_marginStart="14dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="8dp"
          >
        <CheckBox
            android:id="@+id/comment_login_tc_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="14dp"
            />
        <TextView
            android:id="@+id/comment_login_terms_and_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="4dp"
            android:gravity="start"
            android:paddingBottom="8dp"
            android:paddingTop="14dp"
            android:text="I accept Aptoide's Terms and Conditions and Privacy Policy"
            android:textColor="@color/black_text"
            style="@style/Aptoide.TextView.Regular.XS"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:orientation="horizontal"
          >
        <Button
            android:id="@+id/comment_login_more_options_button"
            android:layout_width="130dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="MORE OPTIONS"
            style="@style/Aptoide.Button.Flat"
            />
        <Button
            android:id="@+id/comment_login_cancel_button"
            android:layout_width="78dp"
            android:text="@string/cancel_button"
            style="@style/Aptoide.Button.Flat"
            />
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</android.support.v7.widget.CardView>