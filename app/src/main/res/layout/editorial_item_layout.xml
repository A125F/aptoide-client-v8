<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout
      android:id="@+id/editorial_item_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      tools:visibility="visible"
      >
    <LinearLayout
        android:id="@+id/editorial_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        >
      <TextView
          android:id="@+id/editorial_item_first_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:visibility="gone"
          tools:text="First Title"
          tools:visibility="visible"
          style="@style/Aptoide.TextView.Medium.L"
          />
      <TextView
          android:id="@+id/editorial_item_secondary_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:visibility="gone"
          tools:text="Secondary Title"
          tools:visibility="visible"
          style="@style/Aptoide.TextView.Medium.S"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/editorial_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editorial_item_title"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:text="Plenty of stuff about the thing we want to talk about, now repeat. Plenty of stuff about the thing we want to talk about, now repeat. Plenty of stuff about the thing we want to talk about, now repeat. Plenty of stuff about the thing we want to talk about, now repeat. Plenty of stuff about the thing we want to talk about, now repeat. "
        tools:visibility="visible"
        />
  </RelativeLayout>

  <LinearLayout
      android:id="@+id/editorial_item_media"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/editorial_item_text"
      android:layout_marginTop="32dp"
      android:orientation="horizontal"
      android:visibility="gone"
      tools:visibility="visible"
      >
    <ImageView
        android:id="@+id/editorial_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        tools:background="@color/light_blue"
        tools:visibility="visible"
        />
    <VideoView
        android:id="@+id/editorial_video"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/editoral_image_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone"
        >
    </android.support.v7.widget.RecyclerView>
  </LinearLayout>

  <TextView
      android:id="@+id/editorial_image_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/editorial_item_media"
      android:layout_marginTop="11dp"
      android:visibility="gone"
      tools:text="Description"
      tools:visibility="visible"
      />

  <include
      layout="@layout/app_install_cardview"
      android:id="@+id/app_cardview"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_below="@id/editorial_image_description"
      android:layout_marginTop="32dp"
      android:visibility="gone"
      tools:visibility="visible"
      />
</RelativeLayout>