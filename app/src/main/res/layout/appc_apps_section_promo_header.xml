<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp"
    >

  <TextView
      android:id="@+id/title"
      style="@style/Aptoide.TextView.Regular.L.BlackAlpha"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="9dp"
      android:layout_marginLeft="9dp"
      android:paddingTop="19dp"
      android:text="@string/promo_update2appc_appcard_short"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"

      />

  <TextView
      android:id="@+id/desc_title"
      style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="9dp"
      android:layout_marginLeft="9dp"
      android:gravity="center"
      android:paddingTop="19dp"
      android:text="@string/promo_update2appc_title"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"
      />

  <TextView
      android:id="@+id/message"
      style="@style/Aptoide.TextView.Regular.XS.Grey_900"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingStart="19dp"
      android:paddingTop="2dp"
      android:paddingEnd="19dp"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/desc_title"
      app:layout_constraintVertical_bias="0"
      tools:text="@string/promo_update2appc_message"
      />

  <ImageView
      android:id="@+id/appc_disclaimer_icon"
      android:layout_width="17dp"
      android:layout_height="17dp"
      android:layout_marginTop="9dp"
      android:layout_marginEnd="9dp"
      android:layout_marginRight="9dp"
      android:src="@drawable/ic_info_outline_appc"
      app:layout_constraintHorizontal_bias="0.15"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/message"
      />

  <TextView
      android:id="@+id/appc_disclaimer_message"
      style="@style/Aptoide.TextView.Medium.XXS"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginStart="7dp"
      android:layout_marginLeft="7dp"
      android:gravity="center_vertical"
      android:text="@string/promo_update2appc_data_disclaimer"
      android:textColor="#fd6363"
      app:layout_constraintBottom_toBottomOf="@id/appc_disclaimer_icon"
      app:layout_constraintLeft_toRightOf="@id/appc_disclaimer_icon"
      app:layout_constraintTop_toTopOf="@id/appc_disclaimer_icon"

      />
</androidx.constraintlayout.widget.ConstraintLayout>