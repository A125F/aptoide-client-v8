<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    >

  <ImageButton
      android:id="@+id/add_reactions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:background="@drawable/round_white_button"
      android:paddingBottom="4dp"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:paddingTop="4dp"
      android:src="?attr/reactionInputDrawable"
      />

  <include
      layout="@layout/reactions"
      android:id="@+id/reactions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="9dp"
      android:layout_marginStart="9dp"
      android:layout_toEndOf="@id/add_reactions"
      android:layout_toRightOf="@id/add_reactions"
      />

  <TextView
      android:id="@+id/number_of_reactions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_toEndOf="@id/reactions"
      android:layout_toRightOf="@id/reactions"
      android:visibility="invisible"
      tools:text="100"
      tools:visibility="visible"
      style="@style/Aptoide.TextView.Regular.XS.BlackAlpha"
      />

</RelativeLayout>