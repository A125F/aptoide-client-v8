<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_cardview_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@drawable/background_with_shadow"
      android:orientation="vertical"
      >
    <include
        layout="@layout/wallet_install_cardview"
        android:id="@+id/app_cardview"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/appc_gradient"
        android:gravity="center"
        android:text="You need the AppCoins Wallet to get your AppCoins Credits"
        tools:text="You need the AppCoins Wallet to get your AppCoins Credits"
        style="@style/Aptoide.TextView.Medium.XXS.White"
        />
  </LinearLayout>
</RelativeLayout>