<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/displayable_social_timeline_game_card_icon"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="12.7dp"
          android:layout_marginStart="12.7dp"
          android:layout_marginTop="10dp"
          tools:ignore="contentDescription"
          tools:src="@drawable/aptoide_quiz_icon"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_game_card_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="65dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="65dp"
          android:layout_marginTop="14.7dp"
          android:lines="1"
          tools:text="Aptoide Timeline Quiz"
          style="@style/Aptoide.TextView.Regular.S.Grey"
          />


<include layout="@layout/game_stats_header"
    android:id="@+id/stats_header"
    android:layout_width="120dp"
    android:layout_height="20dp"
    android:layout_alignParentRight = "true"
    android:layout_marginTop="18dp"
    />

      <View
          android:id="@+id/card_custom_view_line_separator"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/displayable_social_timeline_game_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <RelativeLayout
          android:id="@+id/displayable_social_timeline_game_card_question1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:background="@color/tw__solid_white"
          android:orientation="vertical"
          android:visibility="visible"
          >

        <include layout="@layout/timeline_icon_question_body"
            android:id="@+id/icon_question"
            android:visibility="gone"/>

        <include layout="@layout/timeline_question_body"
            android:id="@+id/question"
            android:visibility="visible"/>

        <include
            layout="@layout/timeline_game_answer_element_1"
            android:id="@+id/answers"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="120dp"
            android:visibility="visible"
            />


        <TextView
            android:id="@+id/stamp_left"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:alpha="0.0"
            android:rotation="-35"
            android:src="@mipmap/ic_launcher"
            android:text="Facebook"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/stamp_right"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            android:alpha="0.0"
            android:rotation="35"
            android:src="@mipmap/ic_launcher"
            android:text="Clash Royal"
            android:visibility="invisible"
            />

      </RelativeLayout>


    </RelativeLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>

