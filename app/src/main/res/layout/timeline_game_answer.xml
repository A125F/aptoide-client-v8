<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/displayable_social_timeline_answer_card_icon"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="12.7dp"
          android:layout_marginStart="12.7dp"
          android:layout_marginTop="10dp"
          tools:ignore="contentDescription"
          tools:src="@drawable/aptoide_quiz_icon"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_answer_card_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:layout_marginTop="14.7dp"
          android:lines="1"
          tools:text="Aptoide Timeline Quiz"
          style="@style/Aptoide.TextView.Regular.S.Grey"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_answer_card_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/displayable_social_timeline_answer_card_title"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:lines="1"
          android:visibility="gone"
          tools:text="HÃ¡ duas horas"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />

      <ProgressBar
          android:id="@+id/cards_left_progress"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_below="@id/displayable_social_timeline_answer_card_title"
          android:layout_marginLeft="18dp"
          android:layout_marginStart="18dp"
          android:layout_marginTop="2dp"
          android:layout_toEndOf="@id/displayable_social_timeline_answer_card_icon"
          android:layout_toRightOf="@id/displayable_social_timeline_answer_card_icon"
          />

      <include layout="@layout/game_stats_header"
          android:id="@+id/stats_header"
          android:layout_width="120dp"
          android:layout_height="20dp"
          android:layout_alignParentRight = "true"
          android:layout_marginTop="18dp"
          />

      <View
          android:id="@+id/card_custom_view_line_separator"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/displayable_social_timeline_game_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <RelativeLayout
          android:id="@+id/displayable_social_timeline_game_answer_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:orientation="vertical"
          android:visibility="visible"
          >

        <ImageView
            android:id="@+id/get_app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_launcher"
            />

        <Button
            android:id="@+id/get_app_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/app_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/get_app_icon"
            android:layout_toRightOf="@id/get_app_icon"
            android:textSize="10sp"
            tools:text="get app"
            style="@style/Aptoide.Button.Ghost.ThinBlackAlpha"
            />

        <ImageView
            android:id="@+id/answer_status"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:id="@+id/answer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Answer:"
            android:visibility="visible"
            />

        <TextView
            android:id="@id/app_name"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/get_app_icon"
            android:layout_toRightOf="@id/get_app_icon"
            android:gravity="center"
            android:text="Aptoide - App Store"
            android:textColor="@color/black"
            style="@style/Aptoide.TextView.Medium.M"
            />

        <ProgressBar
            android:id="@+id/leaderboard_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/get_app_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:visibility="invisible"
            />

        <include
            layout="@layout/timeline_game_answer_stats_element"
            android:id="@+id/card_leaderboard"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_below="@id/get_app_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            />

      </RelativeLayout>
    </RelativeLayout>
      </LinearLayout>
</android.support.v7.widget.CardView>