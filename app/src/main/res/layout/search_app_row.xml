<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/backgroundCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="8dp"
      >
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ad_icon"
        />
    <TextView
        android:id="@+id/app_name"
        style="@style/Aptoide.TextView.Medium.M.BlackAlpha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/app_icon"
        app:layout_constraintTop_toTopOf="@+id/app_icon"
        tools:text="Clash Royale"
        />
    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="?attr/ratingDrawable"
        app:layout_constraintBottom_toTopOf="@+id/downloads_icon"
        app:layout_constraintLeft_toLeftOf="@+id/app_name"
        app:layout_constraintTop_toBottomOf="@+id/app_name"
        app:layout_constraintVertical_bias="0.25"
        />
    <TextView
        android:id="@+id/rating"
        style="@style/Aptoide.TextView.Medium.XXS.BlackAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/star_icon"
        app:layout_constraintLeft_toRightOf="@+id/star_icon"
        app:layout_constraintTop_toTopOf="@+id/star_icon"
        tools:text="4.2"
        />
    <ImageView
        android:id="@+id/downloads_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ic_appview_download_icon"
        android:tint="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/app_icon"
        app:layout_constraintStart_toStartOf="@+id/star_icon"
        />
    <TextView
        android:id="@+id/downloads"
        style="@style/Aptoide.TextView.Regular.XXS.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/downloads_icon"
        app:layout_constraintStart_toEndOf="@+id/downloads_icon"
        app:layout_constraintTop_toTopOf="@+id/downloads_icon"
        tools:text="123 K"
        />
    <ImageView
        android:id="@+id/store_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_store"
        android:tint="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/downloads_icon"
        app:layout_constraintStart_toEndOf="@+id/downloads"
        />
    <TextView
        android:id="@+id/store_name"
        style="@style/Aptoide.TextView.Regular.XXS.Grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/store_icon"
        app:layout_constraintEnd_toStartOf="@+id/appc_label_layout"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/store_icon"
        app:layout_constraintTop_toTopOf="@+id/store_icon"
        tools:text="Royale App Store"
        />

    <include
      android:id="@+id/appc_label_layout"
      layout="@layout/appc_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/store_name"
      />

    <android.widget.Button
      android:id="@+id/install_button"
      style="@style/Aptoide.Button.Install"
      android:layout_width="0dp"
      android:layout_height="@dimen/button_small_height"
      android:text="@string/install"
      android:textAllCaps="true"
      android:textSize="16sp"
      android:visibility="gone"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/app_icon"
      />

    <cm.aptoide.aptoideviews.downloadprogressview.DownloadProgressView
      android:id="@+id/download_progress_view"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="5dp"
      android:layout_marginStart="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/app_icon"
      android:visibility="gone"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>