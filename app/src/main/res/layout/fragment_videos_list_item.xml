<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    >


  <VideoView
      android:id="@+id/app_video"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_gravity="center"
      android:orientation="vertical"
      />

  <android.support.design.widget.CoordinatorLayout
      android:id="@+id/app_info_bar"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/discovery_app_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start|center"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/aptoide_gradient_rounded"
        />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|right"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        app:layout_anchor="@+id/discovery_app_icon"
        app:layout_anchorGravity="right"
        tools:text="Game #1 - Verrry noice"
        style="@style/Aptoide.TextView.Medium"
        />

    <ImageView
        android:id="@+id/rating_star"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/ic_star_white"
        app:layout_anchor="@+id/discovery_app_icon"
        app:layout_anchorGravity="bottom|right"
        />

    <TextView
        android:id="@+id/app_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/white"
        app:layout_anchor="@+id/rating_star"
        app:layout_anchorGravity="right|center"
        tools:text="0.0"
        style="@style/Aptoide.TextView.Medium"
        />

    <Button
        android:id="@+id/install_button"
        android:layout_width="83dp"
        android:layout_height="32dp"
        android:layout_gravity="end|center"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_corners_white"
        tools:text="INSTALL"
        style="@style/Aptoide.Button"
        />

  </android.support.design.widget.CoordinatorLayout>

</LinearLayout>