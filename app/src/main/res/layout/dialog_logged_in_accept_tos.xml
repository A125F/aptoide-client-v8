<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/accept_terms_title_loggedin"
        style="@style/Aptoide.TextView.Regular.L.BlackAlpha"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/accept_terms_message_loggedin"
        style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >

      <CheckBox
          android:id="@+id/logged_in_terms_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginEnd="6dp"
          android:layout_marginRight="6dp"
          />

      <TextView
          android:id="@+id/privacy_and_tos"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="I accept Aptoide Terms and Conditions and Privacy Policy"
          style="@style/Aptoide.TextView.Medium.XS.BlackAlpha"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        >

      <Button
          android:id="@+id/log_out"
          android:layout_width="wrap_content"
          android:text="@string/myaccount_log_out_button"
          android:textSize="12sp"
          style="@style/Aptoide.Button.Flat.S"
          />

      <Button
          android:id="@+id/accept_continue"
          android:layout_width="wrap_content"
          android:clickable="false"
          android:enabled="false"
          android:text="@string/continue_option"
          android:textSize="12sp"
          style="@style/Aptoide.Button.Flat.S.GreyMedium"
          />

    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>