<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <ImageView
      android:id="@+id/reaction_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_react_placeholder"
      android:visibility="invisible"
      tools:visibility="visible"
      />
  <ImageView
      android:id="@+id/reaction_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="13.9dp"
      android:layout_marginStart="13.9dp"
      android:src="@drawable/ic_react_placeholder"
      android:visibility="invisible"
      tools:visibility="visible"
      />
  <ImageView
      android:id="@+id/reaction_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="27.8dp"
      android:layout_marginStart="27.8dp"
      android:src="@drawable/ic_react_placeholder"
      android:visibility="invisible"
      tools:visibility="visible"
      />

</RelativeLayout>