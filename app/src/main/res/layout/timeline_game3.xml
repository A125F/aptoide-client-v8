<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    style="@style/Widget.Aptoide.Card"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="51dp"
        android:src="@drawable/quiz_card1_background"
        />

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/displayable_social_timeline_game_card_icon"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          tools:ignore="contentDescription"
          tools:src="@mipmap/aptoide_quiz_icon"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_game_card_title"
          android:layout_width="56dp"
          android:layout_height="20dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:lines="1"
          tools:text="App Quiz"
          style="@style/Aptoide.TextView.Regular.S.BlackAlpha"
          />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        >

        <include layout="@layout/timeline_icon_question_body"
            android:id="@+id/icon_question"
            android:visibility="visible"
            />

        <include layout="@layout/timeline_question_body"
            android:id="@+id/question"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stamp_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        >

      <ImageView
          android:id="@+id/stamp_left"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="25dp"
          android:layout_marginStart="25dp"
          android:layout_marginTop="5dp"
          android:alpha="0.0"
          android:src="@mipmap/ic_launcher"
          android:visibility="invisible"
          />

      <ImageView
          android:id="@+id/stamp_right"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="240dp"
          android:layout_marginStart="240dp"
          android:layout_marginTop="5dp"
          android:alpha="0.0"
          android:src="@mipmap/ic_launcher"
          android:visibility="invisible"
          />
      </LinearLayout>

    <LinearLayout
        android:id="@+id/answers_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_layout"
        android:layout_marginTop="7dp"
        >
      <include
          layout="@layout/timeline_game_answer_element_3"
          android:id="@+id/answers"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_marginBottom="20dp"
          android:visibility="visible"
          />
    </LinearLayout>
  </RelativeLayout>
</android.support.v7.widget.CardView>
