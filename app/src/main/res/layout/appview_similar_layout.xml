<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="11dp"
      android:layout_marginStart="11dp"
      android:layout_marginTop="8dp"
      android:text="@string/appview_similar_apps"
      android:textColor="@color/black_87_alpha"
      android:textSize="17sp"
      />
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginEnd="7dp"
      android:layout_marginRight="7dp"
      android:text="@string/button_header_more"
      android:textColor="@color/default_orange_gradient_end"
      style="@style/Widget.Aptoide.Button.Borderless.Colored"
      />

  <android.support.v7.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/title"
      android:layout_marginTop="12dp"
      />
</RelativeLayout>