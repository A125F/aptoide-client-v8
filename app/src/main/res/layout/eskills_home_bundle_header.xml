<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/eskills_apps_bundle_item"
    >

  <TextView
      android:id="@+id/bundle_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical|start"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      android:drawablePadding="6dp"
      android:text="@string/eskills_home_title"
      android:textStyle="bold"
      app:drawableStartCompat="@drawable/eskills_trophy"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/Aptoide.TextView.Regular.L.Yellow"
      />
  <TextView
      android:layout_width="34dp"
      android:layout_height="24dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="3dp"
      android:gravity="center"
      android:text="NEW"
      android:padding="1dp"
      android:textColor="?attr/textColorBlackAlpha"
      app:layout_constraintLeft_toRightOf="@id/bundle_title"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@drawable/new_label_background"
      style="@style/Aptoide.TextView.Regular.XXS"
    />

  <android.widget.Button
      android:id="@+id/bundle_more"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:text="@string/button_header_more"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/Aptoide.Button.Flat"
      />
</androidx.constraintlayout.widget.ConstraintLayout>