<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="visible"
      >
    <LinearLayout
        android:id="@+id/donations_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        >

      <TextView
          style="@style/Aptoide.TextView.Regular.L.BlackAlpha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="19dp"
          android:layout_marginBottom="32dp"
          android:text="@string/appview_title_donations_dialogue"
          />

      <EditText
          android:id="@+id/nickname"
          style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginBottom="32dp"
          android:hint="@string/appview_field_donations_dialogue"
          android:imeOptions="actionDone"
          android:paddingStart="18dp"
          android:paddingLeft="18dp"
          />

      <EditText
          android:id="@+id/appc_value"
          style="@style/Aptoide.TextView.Regular.XL.Black"
          android:layout_width="wrap_content"
          android:layout_height="56dp"
          android:layout_gravity="center"
          android:layout_marginBottom="6dp"
          android:imeOptions="actionDone"
          android:inputType="numberDecimal"
          tools:hint="2"
          />

      <TextView
          style="@style/Aptoide.TextView.Regular.XS.BlackAlpha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginBottom="32dp"
          android:text="APPC"
          />

      <SeekBar
          android:id="@+id/appc_slider"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="2dp"
          android:layout_marginLeft="2dp"
          android:layout_marginEnd="2dp"
          android:layout_marginRight="2dp"
          android:layout_marginBottom="24dp"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginBottom="8dp"
          android:orientation="horizontal"
          >
        <android.widget.Button
            android:id="@+id/cancel_button"
            style="@style/Aptoide.Button.Flat"
            android:layout_width="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/cancel"
            />
        <android.widget.Button
            android:id="@+id/donate_button"
            style="@style/Aptoide.Button.Flat"
            android:layout_width="wrap_content"
            android:text="@string/appview_button_donations"
            />
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
  <ProgressBar
      android:id="@+id/donations_progress"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_gravity="center"
      android:layout_margin="15dp"
      android:visibility="gone"
      />
  <LinearLayout
      android:id="@+id/no_wallet_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone"
      >
    <TextView
        style="@style/Aptoide.TextView.Medium.M.BlackAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/appview_message_donations_nowallet"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        >
      <android.widget.Button
          android:id="@+id/no_wallet_cancel_button"
          style="@style/Aptoide.Button.Flat"
          android:layout_width="95dp"
          android:layout_marginEnd="12dp"
          android:layout_marginRight="12dp"
          android:text="@string/cancel"
          />
      <android.widget.Button
          android:id="@+id/no_wallet_continue_button"
          style="@style/Aptoide.Button.Flat"
          android:layout_width="95dp"
          android:text="@string/yes"
          />
    </LinearLayout>
  </LinearLayout>
  <include
      android:id="@+id/error_layout"
      layout="@layout/generic_error_layout"
      />

  <LinearLayout
      android:id="@+id/thank_you_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone"
      >
    <TextView
        style="@style/Aptoide.TextView.Medium.M.BlackAlpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/appview_message_donations_completed"
        />

    <android.widget.Button
        android:id="@+id/thank_you_ok_button"
        style="@style/Aptoide.Button.Flat"
        android:layout_width="95dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/all_button_ok"
        />
  </LinearLayout>
</androidx.cardview.widget.CardView>