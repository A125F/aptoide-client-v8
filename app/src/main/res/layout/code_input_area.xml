<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="?attr/backgroundCardColor"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/email_set"
      style="@style/Aptoide.TextView.Regular.S.BlackAlpha"
      android:layout_width="match_parent"
      android:layout_height="@dimen/login_field_height"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="16dp"
      android:layout_marginRight="32dp"
      android:background="@drawable/button_border_grey_fill"
      android:drawableEnd="@drawable/ic_cancel_black_24dp"
      android:drawableRight="@drawable/ic_cancel_black_24dp"
      android:drawableTint="@color/grey"
      android:gravity="center_vertical"
      android:maxLength="@integer/max_username_char_length"
      android:maxLines="1"
      android:paddingStart="20dp"
      android:paddingLeft="20dp"
      android:paddingEnd="10dp"
      android:paddingRight="10dp"
      tools:text="yes@email.com"
      />


  <!-- forgot password or agree with company terms -->
  <LinearLayout
      android:id="@+id/input_button_area"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:orientation="vertical"
      android:paddingStart="32dp"
      android:paddingLeft="32dp"
      android:paddingEnd="32dp"
      android:paddingRight="32dp"
      android:visibility="visible"
      >

    <TextView
        style="@style/Aptoide.TextView.Regular.XS.Grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We just sent you a temporary login code. Please check your inbox, or your spam folder"
        />

    <AutoCompleteTextView
        android:id="@+id/code_input"
        style="@style/Aptoide.TextView.Regular.M.Primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_field_height"
        android:layout_marginTop="16dp"
        android:background="?attr/loginInputBackground"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Enter the code here"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:id="@+id/resubmit_code"
          style="@style/Aptoide.TextView.Regular.S.Grey"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="Did not receive email? Generate new code"
          android:visibility="visible"
          />
      <TextView
          android:id="@+id/submit_code_error"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:drawableStart="@drawable/ic_error_outline_red"
          android:drawableLeft="@drawable/ic_error_outline_red"
          android:drawablePadding="5dp"
          android:drawableTint="@color/red"
          android:text="generic error"
          android:textColor="@color/red"
          android:visibility="gone"
          tools:visibility="gone"
          />
    </FrameLayout>

    <Button
        android:id="@+id/button_finish"
        style="@style/Aptoide.Button.Install"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:text="Finish"
        />
  </LinearLayout>


</LinearLayout>
